<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Banner" parent="AppBaseTheme">
        <item name="android:padding">15dp</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="ShadowText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="Button" parent="ShadowText">
        <item name="android:background">@drawable/button1_selector</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    
    <style name="ui_button">
        <item name="android:layout_width">35dp</item>
        <item name="android:alpha">.6</item>
        <item name="android:layout_height">35dp</item>        
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/viewer_background</item>
    </style>

    <style name="act_main_button" parent="Banner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/main_button_selector</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/super_light_blue</item>
    </style>   
 
    
</resources>