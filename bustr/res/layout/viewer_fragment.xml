<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/shadow_black"
    android:paddingBottom="5px"
    android:paddingLeft="6px"
    android:paddingRight="5px"
    android:paddingTop="5px" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="#FFFFFF" >

        <ProgressBar
            android:id="@+id/viewerProgress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/viewerImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/viewerCaption"
            style="@style/ShadowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/viewerImage"
            android:layout_centerHorizontal="true"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:text="test"
            android:textSize="25sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/repDisplay"
            style="@style/ShadowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewerCaption"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/upvote"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_wrapper"
            android:src="@drawable/upcircular" />

        <ImageView
            android:id="@+id/comment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_wrapper"
            android:src="@drawable/commentsbutton" />

        <ImageView
            android:id="@+id/downvote"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_wrapper"
            android:src="@drawable/downcircular" />
    </RelativeLayout>

</RelativeLayout>